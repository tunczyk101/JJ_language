when x == 1
returns 1

func func_with_flows
{
    let xd { 123 }; 
    if( xd > 10 )
    {
        println(xd); 
    }

    mut let mutable_var { 0 }; 
    while( mutable_var < 10 * xd ) 
    {
        mutable_var = mutable_var * xd;
    }

    for( mut let i = 0; i < 0; i = i + 1 )
    {
        mutable_var = mutable_var - xd;
    }
}

